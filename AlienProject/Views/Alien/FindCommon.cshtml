@model List<CommonActivityViewModel>

<!DOCTYPE html>
<html>
<head>
    <title>Common Activities</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
</head>
<body>

    <div class="container">
        <h1 class="pt-4 mb-4">Common Activities</h1>
        <form asp-controller="Alien" asp-action="FindCommon" method="post" class="mb-4">
            <div class="form-group">
                <label for="alienName">Alien Name:</label>
                <input type="text" name="alienName" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="alienName">Human Name:</label>
                <input type="text" name="humanName" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="fromDate">From Date:</label>
                <input type="date" name="fromDate" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="toDate">To Date:</label>
                <input type="date" name="toDate" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-success bg-color">Find Common</button>
            <a class="btn btn-secondary" asp-action="Aliens">Back</a>
        </form>

        @if (Model != null && Model.Any())
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Activity Date</th>
                        <th>Human Name</th>
                        <th>Alien Name</th>
                        <th>Type</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var activity in Model)
                    {
                        <tr>
                            <td>@activity.ActivityDate.ToShortDateString()</td>
                            <td>@activity.HumanName</td>
                            <td>@activity.AlienName</td>
                            <td>@activity.Type</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="mt-4">No common activities found.</p>
        }
    </div>

</body>
</html>
