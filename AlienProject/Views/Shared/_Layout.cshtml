<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>AlienProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AlienProject.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-black text-white box-shadow ">
            <div class="container-fluid">
                <a class="navbar-brand text-white p-3" asp-area="" asp-controller="Home" asp-action="Index">AlienProject</a>
                <button class="navbar-toggler bg-white" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon text-white"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 p-3">
                        @if (User.Identity.IsAuthenticated)
                        {
                            if (User.IsInRole("Alien"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white " asp-area="" asp-controller="Alien" asp-action="Aliens">Alien</a>
                                </li>
                            }
                            else if (User.IsInRole("Human"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white " asp-area="" asp-controller="Human" asp-action="Humans">Human</a>
                                </li>
                            }
                            
                        }
                        <li class="nav-item">
                            <a class="nav-link text-white " asp-area="" asp-controller="SpaceShip" asp-action="SpaceShips">SpaceShip</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white " asp-area="" asp-controller="Experiment" asp-action="Experiments">Experiment</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white " asp-area="" asp-controller="Excursion" asp-action="Excursion">Excursion</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white " asp-area="" asp-controller="Abduction" asp-action="Abduction">Abduction</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white " asp-area="" asp-controller="Killing" asp-action="Killing">Killing</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white " asp-area="" asp-controller="Authentication" asp-action="Logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white " asp-area="" asp-controller="Authentication" asp-action="Login">Login</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-white " asp-area="" asp-controller="Authentication" asp-action="Register">Registration</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white " asp-area="" asp-controller="Home" asp-action="AboutUs">AboutUs</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="bg-black text-white">
        <main role="main" >
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
