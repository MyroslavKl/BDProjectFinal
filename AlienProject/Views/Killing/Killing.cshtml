@model List<KillingViewModel>

<!DOCTYPE html>
<html>
<head>
    <title>Killings</title>
    <style>
                   
            
                    .container {
                        padding: 20px;
                        color: white;
                        
                    }
                    
            
                   h2 {
                                           color: #21E786; 
                                           font-size: 47px;
                                           font-weight: 800;
                                       }
                    table {
                        width: 100%;
                        border-collapse: collapse;
                        border-radius: 15px;
                        margin-top: 20px;
                    }
            
                    th, td {
                        border: 1px solid gray;
                        padding: 10px;
                        text-align: left;
                    }
            
                    
            
                    tr:hover {
                        background-color: #056235;
                        transition: ease-in-out;
                        duration: 500ms;
                    }
                </style>
</head>
<body>
<div class="container">
    <h2>Killings</h2>
    
    <table class="table text-white">
        <thead>
        <tr>
            <th>Killing Id</th>
            <th>Killing Date</th>
            <th>Alien Name</th>
            <th>Alien Birth Date</th>
            <th>Human Name</th>
            <th>Human Birth Date</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.KillingId</td>
                <td>@item.KillingDate.ToShortDateString()</td>
                <td>@item.AlienName</td>
                <td>@(item.AlienBirthDate.HasValue ? item.AlienBirthDate.Value.ToShortDateString() : "-")</td>
                <td>@item.HumanName</td>
                <td>@(item.HumanBirthDate.HasValue ? item.HumanBirthDate.Value.ToShortDateString() : "-")</td>
            </tr>
        }
            
        </tbody>
    </table>
   
</div>
</body>
</html>

@if (User.Identity.IsAuthenticated)
{
    <div class="container">
    <ul>
        <li><a class="text-color" asp-action="FindAlien">Find Killed Alien</a></li>
    </ul>
    </div>  
}